{
  "layer": "top",
  "position": "top",
  "height": 24,
  "modules-left": ["hyprland/workspaces", "mpris", "gamemode", "privacy", "custom/xwayland", "custom/xbps-updates"],
  "modules-center": ["hyprland/window"],
  "modules-right": ["tray", "backlight", "pulseaudio", "network", "temperature", "cpu", "memory", "custom/gpu-usage", "battery", "clock", "custom/notification"],
  "hyprland/workspaces": {
    "format": "{icon}",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1"
  },
  "tray": {
    "spacing": 10
  },
  "gamemode": {
    "format-alt": "{glyph}",
    "icon-size": 16
  },
  "hyprland/window": {
    "icon": true,
    "icon-size": 16,
    "separate-outputs": true,
    "max-length": 45
  },
  "privacy": {
    "icon-spacing": 4,
    "icon-size": 14,
    "transition-duration": 250,
    "modules": [
      {
        "type": "screenshare",
        "tooltip": true,
        "tooltip-icon-size": 24
      },
      {
        "type": "audio-in",
        "tooltip": true,
        "tooltip-icon-size": 24
      }
    ]
  },
  "custom/xbps-updates": {
    "format": "{}  ÔÜá",
    "return-type": "json",
    "tooltip": true,
    "interval": 60,
    "exec": "~/.config/waybar/custom/xbps-updates.sh"
  },
  "mpris": {
    "format": "{status_icon} {player_icon} {artist} ‚Äì {title}",
    "player-icons": {
      "default": "üéµ",
      "spotify": "ÔÜº ",
      "spotifyd": "ÔÜº ",
      "spotify_player": "ÔÜº ",
      "firefox": "Û∞àπ",
      "vlc": "Û∞ïº",
      "chromium": "Ôâ®",
      "mpv": "ÔçÆ"
    },
    "status-icons": {
      "playing": "ÔÅå",
      "paused": "ÔÅã",
      "stopped": "ÔÅç"
    },
    "artist-len": 15,
    "title-len": 45,
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous"
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{percent}% Û∞õ®"
  },
  "clock": {
    "interval": 1,
    "format": "{:%d/%m/%y %H:%M:%S}",
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "mode": "month",
      "weeks-pos": "left",
      "format": {
			"months":     "<span color='#ffead3'><b>{}</b></span>",
			"days":       "<span color='#ecc6d9'><b>{}</b></span>",
			"weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
			"weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
			"today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
		  }
    }
  },
  "cpu": {
    "interval": 2,
    "format": "{avg_frequency} GHz ({usage}%) Ôãõ"
  },
  "memory": {
    "interval": 2,
    "format": "{used} GiB ({percentage}%) ÓøÖ"
  },
  "battery": {
    "frequency": 10,
    "format": "{capacity}% ({time} @ {power:0.2f}W) {icon}",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
  },
  "network": {
    "interval": 5,
    "format-wifi": "{essid} {signalStrength}% {icon} ({bandwidthDownBytes} Û∞áö {bandwidthUpBytes} Û∞ïí)",
    "format-ethernet": "{ifname} {icon} ({bandwidthDownBytes} Û∞áö {bandwidthUpBytes} Û∞ïí)",
    "format-disconnected": "Disconnected {icon}",
    "format-icons": {
      "wifi": "Ôá´",
      "ethernet": "Û∞àÄ",
      "disconnected": "ÔÅ±"
    },
    "tooltip-disconnected": "ÔÅ± Disconnected",
    "tooltip-format": "{icon} {ifname}\nÛ∞©ü address: {ipaddr}/{cidr}\nÛ∞ë© gateway: {gwaddr}\nÛ∞ìÖ bandwidth: {bandwidthDownBytes} Û∞áö {bandwidthUpBytes} Û∞ïí"
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}Ôäî",
    "format-muted": "Óª®",
    "format-icons": {
      "headphones": "ÔÄ•",
      "handsfree": "Ôñê",
      "headset": "Óπô",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄß", "ÔÄ®"]
    },
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
  },
   "temperature": {
    "interval": 10,
    "thermal-zone": 0,
    "format": "{temperatureC}¬∞C Ôãâ"
  },
  "custom/gpu-usage": {
    "exec": "~/.config/waybar/custom/gpu-usage.sh",
    "format": "GPU: {}%",
    "return-type": "",
    "interval": 2
  },
  "custom/notification": {
    "tooltip": false,
    "escape": true,
    "format": "{} {icon}",
    "format-icons": {
      "notification": "Û±Ö´",
      "none": "ÔÉ≥",
      "dnd-notification": "Ôá∂ ",
      "dnd-none": "Û∞Çõ",
      "inhibited-notification": "ÔÇ¢ ",
      "inhibited-none": "ÔÇ¢",
      "dnd-inhibited-notification": "Ôá∑ ",
      "dnd-inhibited-none": "Ôá∑ "
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw"
  },
  "custom/xwayland": {
    "format": "{}",
    "exec": "hyprctl activewindow | grep -q 'xwayland: 1' && echo 'Ôç©'",
    "signal": 1,
    "tooltip-format": "XWayland"
  }
}

